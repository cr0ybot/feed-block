{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "feed-block/feed-item-content",
	"version": "0.2.0",
	"title": "Feed Item Content",
	"category": "widgets",
	"description": "Displays the content of a feed item, similar to the Post Content block.",
	"ancestor": [ "feed-block/feed-item-template" ],
	"usesContext": [
		"custom",
		"content_html",
		"content_html_noimg",
		"content_text"
	],
	"attributes": {
		"customTag": {
			"type": "array",
			"default": []
		},
		"textAlign": {
			"type": "string"
		},
		"contentType": {
			"type": "string",
			"default": "text",
			"enum": [ "text", "html", "htmlNoImg" ]
		}
	},
	"supports": {
		"color": {
			"gradients": true,
			"link": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true,
				"link": true
			}
		},
		"dimensions": {
			"minHeight": true
		},
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalFontWeight": true,
			"__experimentalFontStyle": true,
			"__experimentalTextTransform": true,
			"__experimentalTextDecoration": true,
			"__experimentalLetterSpacing": true,
			"__experimentalDefaultControls": {
				"fontSize": true,
				"fontAppearance": true
			}
		}
	},
	"textdomain": "feed-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./editor.css",
	"style": "file:./style.css",
	"render": "file:./render.php"
}
