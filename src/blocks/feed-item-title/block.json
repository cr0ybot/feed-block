{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "feed-block/feed-item-title",
	"version": "0.2.0",
	"title": "Feed Item Title",
	"category": "widgets",
	"description": "Displays the title of a feed item, similar to the Post Title block.",
	"ancestor": [ "feed-block/feed-item-template" ],
	"usesContext": [
		"feed-block/item/custom",
		"feed-block/item/title",
		"feed-block/item/url",
		"feed-block/rel",
		"feed-block/linkTarget"
	],
	"attributes": {
		"customTag": {
			"type": "array",
			"default": []
		},
		"textAlign": {
			"type": "string"
		},
		"level": {
			"type": "number",
			"default": 2
		},
		"isLink": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"align": [ "wide", "full" ],
		"html": false,
		"color": {
			"gradients": true,
			"link": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true,
				"link": true
			}
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalFontWeight": true,
			"__experimentalFontStyle": true,
			"__experimentalTextTransform": true,
			"__experimentalTextDecoration": true,
			"__experimentalLetterSpacing": true,
			"__experimentalDefaultControls": {
				"fontSize": true,
				"fontAppearance": true,
				"textTransform": true
			}
		}
	},
	"textdomain": "feed-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./editor.css",
	"style": "file:./style.css",
	"render": "file:./render.php"
}
