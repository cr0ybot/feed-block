{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "feed-block/feed-item-summary",
	"version": "0.1.0",
	"title": "Feed Item Summary",
	"category": "widgets",
	"description": "Displays the summary of a feed item, similar to the Post Excerpt block.",
	"ancestor": [ "feed-block/feed-item-template" ],
	"usesContext": [ "summary", "url", "rel", "linkTarget" ],
	"attributes": {
		"textAlign": {
			"type": "string"
		},
		"constrainLength": {
			"type": "boolean",
			"default": false
		},
		"summaryLength": {
			"type": "integer",
			"default": 55
		},
		"moreText": {
			"type": "string"
		},
		"showMore": {
			"type": "boolean",
			"default": true
		},
		"showMoreOnNewLine": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"html": false,
		"color": {
			"gradients": true,
			"link": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true,
				"link": true
			}
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalFontWeight": true,
			"__experimentalFontStyle": true,
			"__experimentalTextTransform": true,
			"__experimentalTextDecoration": true,
			"__experimentalLetterSpacing": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		}
	},
	"textdomain": "feed-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./editor.css",
	"style": "file:./style.css",
	"render": "file:./render.php"
}
