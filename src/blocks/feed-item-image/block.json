{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "feed-loop/feed-item-image",
	"version": "0.1.0",
	"title": "Feed Item Image",
	"category": "widgets",
	"description": "Displays the first image from the feed item, similar to the Post Featured Image block.",
	"ancestor": [ "feed-loop/feed-item-template" ],
	"usesContext": [ "image", "url", "rel", "linkTarget" ],
	"attributes": {
		"isLink": {
			"type": "boolean",
			"default": false
		},
		"aspectRatio": {
			"type": "string"
		},
		"width": {
			"type": "string"
		},
		"height": {
			"type": "string"
		},
		"scale": {
			"type": "string",
			"default": "cover"
		},
		"overlayColor": {
			"type": "string"
		},
		"customOverlayColor": {
			"type": "string"
		},
		"dimRatio": {
			"type": "number",
			"default": 0
		},
		"gradient": {
			"type": "string"
		},
		"customGradient": {
			"type": "string"
		},
		"placeholderId": {
			"type": "number"
		},
		"placeholderURL": {
			"type": "string"
		}
	},
	"supports": {
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"width": true,
			"__experimentalSelector": "img, .block-editor-media-placeholder, .wp-block-feed-loop-feed-item-image__overlay",
			"__experimentalSkipSerialization": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"width": true
			}
		},
		"align": [ "left", "right", "center", "wide", "full" ],
		"color": {
			"__experimentalDuotone": "img, .wp-block-feed-loop-feed-item-image__placeholder, .components-placeholder__illustration, .components-placeholder::before",
			"text": false,
			"background": false
		},
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"textdomain": "feed-loop",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./editor.css",
	"style": "file:./style.css",
	"render": "file:./render.php"
}
